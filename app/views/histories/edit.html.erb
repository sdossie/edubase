<h1>Editing history</h1>

<% form_for(@history) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :date_started %><br />
    <%= f.date_select :date_started %>
  </p>
  <p>
    <%= f.label :date_completed %><br />
    <%= f.date_select :date_completed %>
  </p>
<p>
    <%= f.label :result %><br />
    <%= f.text_field :result %>
  </p>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @history %> |
<%= link_to 'Back', histories_path %>